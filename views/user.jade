extends layout

block head
  link(rel='stylesheet' href='/stylesheets/user.css')

block content
  .userInfo
    .topbar
      .selfIgn= me.ign
      .selfFc= me.fc
      button#logoutButton(onclick="location.href ='/logout';") Logout
      button#updateButton(onclick="location.href ='/update';") Update
    .vivillonLists
      .selfOffering
        p Offering
        each offering in me.offering
          img(src='/images/#{offering}.png' title='#{offering}')
      .selfLookingFor
        p Looking for
        each lookingFor in me.lookingFor
          img(src='/images/#{lookingFor}.png' title='#{lookingFor}')
      
  .right
      h2 Messages

  .content
    .left
      p People with Vivillons you want
      each user in users
        if user.fc != me.fc
          .userli
            .userFc= user.fc
            .userIgn= user.ign
            .userOffering
              p Offering
              each offering in user.offering
                img(src='/images/#{offering}.png' title='#{offering}')
            .userLookingFor
              p Looking for
              each lookingFor in user.lookingFor
                img(src='/images/#{lookingFor}.png' title='#{lookingFor}')

