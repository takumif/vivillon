extends layout

block head
  link(rel='stylesheet' href='/stylesheets/user.css')

block content
  .userInfo
    .topbar
      .selfIgn= me.ign
      .selfFc= me.fc
      a#logout(onclick="location.href ='/logout';") Logout
      a#update(onclick="location.href ='/update';") Update info
    .vivillonLists
      .userOffering.selfOffering
        p Offering
        each offering in me.offering
          img(src='/images/#{offering}.png' title='#{offering}')
      hr
      .userLookingFor.selfLookingFor
        p Looking for
        each lookingFor in me.lookingFor
          img(src='/images/#{lookingFor}.png' title='#{lookingFor}')
      
  .right
    h2 Messages
      .messageBox
        each message in messages
          .message 
            .messageTime= message.date
            p <a href="/user/#{message.fromFc}">#{message.fromIgn}<a> sent you a message:
            .messageContent= message.content

      
  .left
    p People with Vivillons you want
    each user in users
      if user.fc != me.fc
        .userInfo.othersInfo
          .topbar
            .userIgn
              a(href='/user/#{user.fc}')= user.ign
            .userFc= user.fc
          .vivillonLists
            .userOffering
              p Offering
              each offering in user.offering
                img(src='/images/#{offering}.png' title='#{offering}')
            hr
            .userLookingFor
              p Looking for
              each lookingFor in user.lookingFor
                img(src='/images/#{lookingFor}.png' title='#{lookingFor}')

