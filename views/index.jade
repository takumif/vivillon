extends layout

block content
  p Welcome to the Global Vivillon Trade Station!
  .registration
    p Register
    form(action='/register' method='post')
      .form-group#ign
        label In-game Name
        input.form-control(type='text' name='ign' required)
      .form-group#fc
        label Friend Code
        input.form-control(type='text' name='fc' required)
      .form-group#password
        label Password
        input.form-control(type='password' name='password' required)
      .form-group#password
        label Confirm password
        input.form-control(type='password' name='passwordConfirm' required)
      .form-group#offering
        label I'm offering
        .form-vivillon-list#offering-list
          script.
            var names = require(vivillon.js)
            alert(names)
            each name in names
            li=option(data-img-scr=#{name}+".png" value=#{name)displayname
      .form-group#want
        label I'm looking for
        .form-vivillon-list#want-list
      button#registerButton(type='submit') Register